    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name="br.odb.leveleditor3d.android.LevelEditor3DApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"

        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.odb.leveleditor3d.android.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="br.odb.leveleditor3d.android.MenuActivity"
            android:label="@string/title_activity_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.odb.leveleditor3d.android.ModifyGeometryActivity"
            android:label="@string/title_activity_modify_geometry" >
        </activity>
    </application>

</manifest>